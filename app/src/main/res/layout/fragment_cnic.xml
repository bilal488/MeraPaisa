<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.example.bilal488.merapaisa.CNICFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TextInputLayoutReceiverCNICAccountNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:background="@android:color/darker_gray">

        <EditText
            android:id="@+id/EditTextReceiverCNICAccountNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Receiver's Mobile Number"
            android:inputType="phone"
            android:maxLength="11" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TextInputLayoutCNICNumber"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TextInputLayoutReceiverCNICAccountNumber"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray">

        <EditText
            android:id="@+id/EditTextCNICNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Receiver's CNIC"
            android:inputType="text|numberSigned"
            android:maxLength="15"
            tools:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TextInputLayoutCNICAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TextInputLayoutCNICNumber"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray">

        <EditText
            android:id="@+id/EditTextCNICAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Amount(0 to 15000)"
            android:inputType="phone"
            android:maxLength="5" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/buttonCNICTransfer"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TextInputLayoutCNICAmount"
        android:layout_marginTop="30dp"
        android:text="TRANSFER" />

</RelativeLayout>
